@model ECommerce.Models.ViewModels.ListeProduitsViewModels
@{
}

<!DOCTYPE Html>
<html>
    <head>
        <link href="~/css/StyleSheet.css" rel="stylesheet" />
    </head>
    <body>
        <p>
            <h2>Liste des produits</h2>
            <table border="1">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th>Categorie</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ECommerce.Models.Produit r in Model.ListeProduits)
                    {
                        <tr>
                            <td>@r.IDProduit</td>
                            <td>@r.Nom</td>
                            <td>@r.Description</td>
                            <td>@r.Prix €</td>
                            <td>@r.Categorie</td>
                        </tr>
                    }
                    
                </tbody>
            </table>
            <ul id="menu_horizontal">
                @for (int i = 0; i < Model.PaginationInfos.GetNombrePage(); i++)
                {
                    <li><a href="/Produit/List/@(i+1)/">Page @(i + 1)</a></li>
                }
            </ul>
    </body>
</html>
